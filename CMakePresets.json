{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "NGIN_BUILD_DOCUMENTATION": "OFF",
        "NGIN_BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "x64-debug",
      "inherits": "base",
      "displayName": "Debug",
      "description": "Debug build for x64 architecture",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-debug-with-tests",
      "inherits": "base",
      "displayName": "DebugWithTests",
      "description": "Debug build for x64 architecture",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "NGIN_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "x64-release",
      "inherits": "base",
      "displayName": "Release",
      "description": "Release build for x64 architecture",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64-dist",
      "inherits": "base",
      "displayName": "Dist",
      "description": "Distribution build for x64 architecture",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Dist"
      }
    },
    {
      "name": "x64-release-with-tests",
      "inherits": "base",
      "displayName": "ReleaseWithTests",
      "description": "Release build for x64 architecture with tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "NGIN_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "x64-release-final",
      "inherits": "base",
      "displayName": "x64 Release Final",
      "description": "Release build for x64 architecture, with tests and documentation",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "NGIN_BUILD_DOCUMENTATION": "ON",
        "NGIN_BUILD_TESTS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "buildDebug",
      "displayName": "Debug",
      "description": "Builds all projects in Debug mode",
      "configurePreset": "x64-debug",
      "targets": "all"
    },
    {
      "name": "buildDebugWithTests",
      "displayName": "DebugWithTests",
      "description": "Builds all projects in Debug mode, including tests",
      "configurePreset": "x64-debug-with-tests",
      "targets": "all"
    },
    {
      "name": "buildRelease",
      "displayName": "Release",
      "description": "Builds all projects in Release mode",
      "configurePreset": "x64-release",
      "targets": "all"
    },
    {
      "name": "buildDist",
      "displayName": "Dist",
      "description": "Builds all projects in Distribution mode",
      "configurePreset": "x64-dist",
      "targets": "all"
    },
    {
      "name": "buildDocs",
      "displayName": "Build Documentation",
      "description": "Builds the API documentation into HTML format",
      "configurePreset": "x64-release-final",
      "targets": "DOCS"
    },
    {
      "name": "buildTests",
      "displayName": "Test",
      "description": "Builds the tests for NGIN",
      "configurePreset": "x64-release-with-tests",
      "targets": "NGIN_TESTS"
    },
    {
      "name": "buildFinal",
      "displayName": "Final (Release)",
      "description": "Builds all targets, including documentation and tests in release mode",
      "configurePreset": "x64-release-final",
      "targets": "all"
    }
  ]
}
